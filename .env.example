# ─────────────────────────────────────────────────────────────
# ChatPay Monad – Environment Variables
# Copy this file to .env and fill in real values.
# ─────────────────────────────────────────────────────────────

# ── Server ────────────────────────────────────────────────────
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=debug

# ── Database ──────────────────────────────────────────────────
DATABASE_URL=postgresql://chatpay:chatpay_dev@localhost:5432/chatpay_monad

# ── Redis ─────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ── Encryption ────────────────────────────────────────────────
# 64 hex characters (32 bytes). Generate with:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
MASTER_ENCRYPTION_KEY=

# Minimum 16 chars. Generate with:
#   node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
PHONE_HASH_SALT=

# ── Blockchain (Monad Testnet) ────────────────────────────────
MONAD_RPC_URL=https://testnet-rpc.monad.xyz
PAYMENT_POOL_ADDRESS=0x0000000000000000000000000000000000000000

# Relayer private key – encrypted with MASTER_ENCRYPTION_KEY.
# Steps to generate:
#   1. Generate a keypair   →  relayer wallet
#   2. Encrypt the hex key  →  RELAYER_ENCRYPTED_KEY
#   3. Store the IV         →  RELAYER_KEY_IV
# See README for the helper script.
RELAYER_ENCRYPTED_KEY=
RELAYER_KEY_IV=

# ── Twilio (WhatsApp) ────────────────────────────────────────
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=

# ── Telegram ──────────────────────────────────────────────────
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=
